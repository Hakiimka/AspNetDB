@model IEnumerable<SibersTest.Models.ProjectsInfoes>

@{
    ViewBag.Title = "Данные о проектах";
}

<h2>Данные о проектах</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID проекта
        </th>
        <th>
            ID сотрудника
        </th>
        <th>
            Дата старта проекта
        </th>
        <th>
            Дата окончания проекта
        </th>
        <th>
            Приоритет
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectDateStart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectDateEnd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectPriorityId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
